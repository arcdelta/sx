{
  "name": "@arcdelta/sx",
  "version": "2.1.1",
  "description": "Micro CLI for interactive running npm & yarn scripts.",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=12.18.0"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "sx": "./bin/sx"
  },
  "scripts": {
    "cz": "git-cz",
    "build": "tsc",
    "build:watch": "tsc -w",
    "style": "npm run style:format && npm run style:lint",
    "style:format": "prettier --write \"src/**/*.ts\"",
    "style:lint": "eslint src --ext .js,.ts --fix",
    "install:g": "npm run build && npm i -g",
    "release": "npx semantic-release",
    "release:dry": "npx semantic-release --dry-run",
    "test": "echo \"Passed\"",
    "prebuild": "rimraf dist",
    "postversion": "ts-node scripts/update.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcdelta/sx.git"
  },
  "keywords": [
    "node",
    "cli",
    "npm",
    "yarn",
    "scripts",
    "interactive"
  ],
  "author": {
    "name": "Vladislav Mamon",
    "email": "hello@arcdelta.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arcdelta/sx/issues"
  },
  "homepage": "https://github.com/arcdelta/sx#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/node": "^13.13.12",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.0.8",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "ansi-colors": "^4.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
